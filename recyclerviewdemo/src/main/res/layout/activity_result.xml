<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiaoming826.recycleviewdemo.ResultActivity">

    <ImageView
        android:id="@+id/v_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/headbar"/>

    <ImageView
        android:id="@+id/iv_ad"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/v_title"
        android:scaleType="fitXY"
        android:src="@drawable/ad"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@drawable/sheep"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_ad"/>


</RelativeLayout>
